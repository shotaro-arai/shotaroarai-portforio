<%= render 'shared/header' %>

<div class="email-main">
  <div class="email-left">
    <% if @email.errors.any? %>
      <div class="error-alert">
        <ul>
          <% @email.errors.full_messages.each do |message| %>
          <li class='error-message'><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %> 
    <div class="email-text">
      <p>お問い合わせ</p>
      <p>ご連絡が必要な際は</p>
      <p>こちらのフォームをご利用ください</p><br>
      <p>ご意見・ご感想に</p>
      <p>質問やコメント</p><br>
      <p>何でも結構です</p>
      <p>お気軽にどうぞ</p>
    </div>
  </div>
  <div class="email-content">
    <%= form_with model:@email, url:email_index_path , class:"email-form", local: true do |f| %>
      <div class="field"> 
        <%= f.label :お名前, class: "name-field label" %>
        <%= f.text_field :name, autofocus: true, class: "name-box box", placeholder: "荒井翔太郎" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス, class: "email-field label" %>
        <%= f.email_field :email, autofocus: true, class: "email-box box", placeholder: "arai@mail" %>
      </div>
      <div class="field"> 
        <%= f.label :件名, class: "title-field label" %>
        <%= f.text_field :title, autofocus: true, class: "title-box box", placeholder: "本日は" %>
      </div>
      <div class="field"> 
        <%= f.label :本文, class: "text-field label" %>
        <%= f.text_area :text, autofocus: true, class: "text-box", placeholder: "ポートフォリオをご覧くださいまして、ありがとうございました。" %>
      </div>
      <div class="field">
        <%= f.button type="submit" do %>
          <i class="fas fa-paper-plane"></i>
        <% end %>  
      </div>
    <% end %>
  </div>
</div>

